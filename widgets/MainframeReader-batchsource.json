{
  "metadata": {
    "spec-version": "1.6"
  },
  "emit-errors": true,
  "configuration-groups": [
    {
      "label": "Mainframe Reader Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        },
        {
          "widget-type": "textarea",
          "label": "COBOL Copybook",
          "name": "copybookContents"
        },
        {
          "name": "replacements",
          "label": "Text replacements",
          "description": "Enter placeholders and their replacements in the copybook.",
          "widget-type": "keyvalue",
          "widget-attributes": {
            "delimiter": ",",
            "kv-delimiter": "="
          }
        },
        {
          "widget-type": "textbox",
          "label": "Binary File Path",
          "name": "binaryFilePath"
        },
        {
          "widget-type": "csv",
          "label": "Fields to keep",
          "name": "keep",
          "description": "List of fields to keep. Supersedes Fields to drop.",
          "widget-attributes": {
            "delimiter": ","
          }
        },
        {
          "widget-type": "csv",
          "label": "Fields to drop",
          "name": "drop",
          "description": "List of fields to drop.",
          "widget-attributes": {
            "delimiter": ","
          }
        },
        {
          "widget-type": "textbox",
          "label": "Maximum Split Size",
          "name": "maxSplitSize"
        },
        {
          "widget-type": "textbox",
          "label": "Code page",
          "description": "Code page to use, for example, cp037 or cp322. Supersedes the Character set.",
          "name": "codepage"
        },
        {
          "widget-type": "select",
          "label": "Character set. Pick one of these, or specify the Code page directly.",
          "name": "charset",
          "widget-attributes": {
            "values": [
              "EBCDIC-Arabic",
              "EBCDIC-Denmark, Norway",
              "EBCDIC-France",
              "EBCDIC-Germany",
              "EBCDIC-Greece",
              "EBCDIC-International",
              "EBCDIC-Italy",
              "EBCDIC-Russia",
              "EBCDIC-Spain",
              "EBCDIC-Thailand",
              "EBCDIC-Turkey",
              "EBCDIC-US"
            ],
            "default": "EBCDIC-US"
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "schema",
      "widget-type": "schema",
      "widget-attributes": {
        "schema-types": [
          "boolean",
          "int",
          "long",
          "float",
          "double",
          "bytes",
          "string"
        ],
        "schema-default-type": "string"
      }
    }
  ],
  "jump-config": {
    "datasets": [
      {
        "ref-property-name": "referenceName"
      }
    ]
  }
}
