{
  "metadata": {
    "spec-version": "1.5"
  },
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName",
          "widget-attributes" : {
            "default": "Mainframe"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Path to file",
          "name": "binaryFilePath",
          "widget-attributes" : {
            "placeholder" : "gc:// or file:// or hdfs://"
          }
        },
        {
          "widget-type": "textarea",
          "label": "Copybook",
          "name": "copybookContents"
        },
        {
          "widget-type": "select",
          "label": "Character set. Pick one of these, or specify the Code page directly.",
          "name": "charset",
          "widget-attributes": {
            "values": [
              "EBCDIC-Arabic",
              "EBCDIC-Denmark, Norway",
              "EBCDIC-France",
              "EBCDIC-Germany",
              "EBCDIC-Greece",
              "EBCDIC-International",
              "EBCDIC-Italy",
              "EBCDIC-Russia",
              "EBCDIC-Spain",
              "EBCDIC-Thailand",
              "EBCDIC-Turkey",
              "EBCDIC-US"
            ],
            "default": "EBCDIC-US"
          }
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Decider field name",
          "description": "Name of the field used to decide the split of records. E.g. WS-RECORD-TYPE.",
          "name": "decider-field-name",
          "widget-attributes" : {
            "placeholder" : "WS-RECORD-TYPE"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Code page",
          "description": "Code page to use, for example, cp037 or cp322. Supersedes the Character set.",
          "name": "codepage",
          "widget-attributes" : {
            "default": "cp307"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Maximum Split Size",
          "name": "maxSplitSize",
          "widget-attributes" : {
            "default": 1048576
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "schema",
      "widget-type": "schema",
      "widget-attributes": {
        "schema-types": [
          "boolean",
          "int",
          "long",
          "float",
          "double",
          "bytes",
          "string"
        ],
        "schema-default-type": "string"
      }
    }
  ],
  "jump-config": {
    "datasets": [
      {
        "ref-property-name": "referenceName"
      }
    ]
  }
}
